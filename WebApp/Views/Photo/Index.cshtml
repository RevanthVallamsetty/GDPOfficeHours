@{
    ViewBag.Title = "Capture Note";
}

<div text-align: center">
    <div>
        <div id="Camera">
        </div>
        <br>
        <input type="button" value="Capture" onclick="webcam.capture();" />
    </div>
    &nbsp;&nbsp;
    <div>
        <img id="show" style="width: 320px; height: 240px;" src="@ViewBag.pic" />
        <br>
        <br>
        <input id="Submit1" type="submit" onclick="Uploadsubmit();" value="submit" />
    </div>
</div>

@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery.webcam.js")">
    </script>
    <script type="text/javascript">
        $("#Camera").webcam({
             width: 320,
            height: 240,
            async: true,
             mode: "save",
             image_format: 'jpeg',
             jpeg_quality: 90,
             swffile: "@Url.Content("~/Scripts/jscam.swf")",
             onTick: function () { },
            onSave: function () {
                UploadPic();
             },
             onCapture: function () {
                 webcam.save("@Url.Action("Capture", "Photo")/");
             },
             debug: function () { },
             onLoad: function () { }
         });
    </script>
    <script type="text/javascript">
    function UploadPic() {
        $.ajax({
            type: 'POST',
            url: ("@Url.Content("~/Photo/Rebind")/"),
            dataType: 'json',
            success: function (data) {
                $("#show").attr("src", data);
                document.getElementById('Submit1').disabled = false;
                alert("Photo Capture successfully!");
            }
        });
    }

    function Uploadsubmit() {
        debugger;
        var src = $('img').attr('src');
        src_array = src.split('/');
        src = src_array[4];
        if (src != "") {
            $.ajax({
                type: 'POST',
                url: ("@Url.Content("~/Photo/Index")/"),
               dataType: 'json',
               data: { Imagename: src },
               success: function () { }
           });
            window.opener.location.href = "http://localhost:4279/Photo/Changephoto";
            self.close();}}
    </script>

    <script type="text/javascript">
        window.onload = load();

        function load() {
            debugger;
            document.getElementById('Submit1').disabled = true;
        }

    </script>
}


