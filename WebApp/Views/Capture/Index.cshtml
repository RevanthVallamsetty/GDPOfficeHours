@model IEnumerable<WebApp.Models.CaptureNoteModel>

@{
    ViewBag.Title = "View Notes";
}

<h2>View Notes</h2>


@using (Html.BeginForm())
{
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-offset-2 col-md-5">
        @Html.LabelFor(model => model.CapturedDate, "Date", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.CapturedDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.CapturedDate, "", new { @class = "text-danger" })
        <input type="submit" value="Fetch" class="btn btn-default" />
    </div>
    @Html.Partial("CaptureNotePartial")
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

